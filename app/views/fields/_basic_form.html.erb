<% form_for @field, :url => url, :html => {:class => "new-field default-form"} do |f| %>
    <%= error_messages_for :field %>

    <%= f.hidden_field 'type', :value => @field.type %>

    <fieldset>
      <h3><%= @field.type.humanize %> details</h3>

      <p>
        <%= f.label :display_name %>
        <%= f.text_field :display_name %> <i>required</i>
      </p>
      <p>
        <%= f.label :help_text %>
        <%= f.text_field :help_text %>
      </p>
      <p>
        <%= f.label :enabled %>
        <%= f.check_box :enabled, {}, :true, :false %>
      </p>
    </fieldset>
    <p class='submitButton' >
      <%= f.submit 'Save' %>
    </p>   
  
    <%= cancel_button(choose_field_path(@form_section.unique_id)) %>
<% end %>