<div>
  <h2>Add New Field</h2>
    <p>Choose Field Type</p>
  <div class="content">
    <ul>
      <li><%=link_to "Text Field", new_formsection_field_path(@form_section.unique_id, :type => 'text_field')%> </li>
      <li><%=link_to "Text Area", new_formsection_field_path(@form_section.unique_id, :type => 'textarea')%></li>
      <li><%=link_to "Check boxes", new_formsection_field_path(@form_section.unique_id, :type => 'check_boxes')%></li>
      <li><%=link_to "Select drop down", new_formsection_field_path(@form_section.unique_id, :type => 'select_box')%></li>
      <li><%=link_to "Radio button", new_formsection_field_path(@form_section.unique_id, :type => 'radio_button')%></li>
      <li><%=link_to "Numeric Field", new_formsection_field_path(@form_section.unique_id, :type => 'numeric_field')%></li>
      <li><%=link_to "Date Field", new_formsection_field_path(@form_section.unique_id, :type => 'date_field')%></li>
    </ul>
  </div>
  <p> Or use a suggested field</p>
  <table id="suggestedFields">
    <thead>
        <td>Name</td>       
        <td>Help text</td>
        <td>Type</td>
        <td>Available options</td>
        <td></td>
    </thead>
       <%= render :partial => "suggested_field", :collection => @suggested_fields, :locals=> {:form_section_id=>@form_section.unique_id} %>

  </table>
</div>
<p><%= link_to "Go Back To Edit Forms Page", edit_form_section_path(@form_section) %></p>
