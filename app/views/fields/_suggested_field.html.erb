<tr class="<%= suggested_field.unique_id %>Display">
  <td class="displayName">
    <%= suggested_field.field.display_name %>
  </td>
  <td class="helpText">
    <%= suggested_field.help_text %>
  </td>
  <td class="fieldType">
    <%= suggested_field.field.type %>
  </td>
  <td class="fieldOptions">
    <% if (suggested_field.field.options) %>
        <%= display_options(suggested_field.field) %>
    <% end %>
  </td>
  <td>
    <%= form_for suggested_field.field, :url => formsection_fields_path(form_section_id), :html => {:method => :post, :id => "Add_#{suggested_field.field.name}"} do |f| %>
        <%= submit_tag "Add to form" %>

        <%= f.hidden_field :name %>
        <%= f.hidden_field :type %>
        <%= f.hidden_field :display_name %>
        <%= f.hidden_field :help_text %>
        <% option_fields_for(f, suggested_field).each do |field| %>
          <%= field %>
        <% end %>
        <input type="hidden" name="from_suggested_field" value="<%= suggested_field.unique_id %>"/>

    <% end %>

  </td>
</tr>
