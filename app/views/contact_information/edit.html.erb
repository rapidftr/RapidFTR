<h1>Contact Information</h1>

<div class="page-content-new">
  <div class="side-tab-content full_width">
    <%= form_for @contact_information, :url => contact_information_path(@contact_information.id), :html => {:class=> 'default-form'} do |f| %>
      <fieldset>

        <p>
          <%= f.label :name, "Name", :class => "key" %>
          <%= f.text_field :name %>
        </p>
        <p>
          <%= f.label :organization, "Organization", :class => "key" %>
          <%= f.text_field :organization %>
        </p>
        <p>
          <%= f.label :position, "Position", :class => "key" %>
          <%= f.text_field :position %>
        </p>
        <p>
          <%= f.label :phone, "Phone", :class => "key" %>
          <%= f.text_field:phone %>
        </p>
        <p>
          <%= f.label :email, "Email", :class => "key" %>
          <%= f.text_field :email %>
        </p>
        <p>
          <%= f.label :location, "Location", :class => "key" %>
          <%= f.text_area :location %>
        </p>
        <p>
          <%= f.label :other_information, "Other information", :class => "key" %>
          <%= f.text_area :other_information %>
        </p>
      </fieldset>

      <div class="btn_panel">
        <%= link_to "Back", admin_path %>
        <%= submit_button("Save") %>
      </div>
    <% end %>
  </div>
</div>
