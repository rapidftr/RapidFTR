<h2><%= t("users.label") %></h2>

<% if can? :create,User %>
    <%= link_to content_tag(:span, t("users.create"), :class => 'create_user'), new_user_path, :class => 'btn' %>
<% end %>
<div class="clearfix"></div>

<form class="filter_bar">
    <div class="show_count"> <%= t("users.actions.show_all") %> <%= pluralize(@users.length, t("user.label")) %> </div>
    <div class="float_left"> <%= t("users.actions.show") %>: <%= select_tag :filter, options_for_select([["Active","active"],[ "All", "all" ]], params[:filter]), { :onchange => "this.form.submit();"} %> </div>
    <div class="float_left"> <%= t("users.sort_by.label") %>:  <%= select_tag :sort, options_for_select([[t("users.sort_by.full_name"),"full_name"],[ t("login.username"), "user_name"]], params[:sort]), { :onchange => "this.form.submit();"} %> </div>
</form>
<table id="users" class="list_table">
  <thead>
  <%= render :partial => 'users_header' %>
  </thead>
  <tbody>
  <%= render :partial => 'user', :collection => @users %>
  </tbody>
</table>
