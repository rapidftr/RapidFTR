<tr>
  <th><%= t("user.full_name") %></th>
  <th><%= t("login.username") %></th>
  <% if can?(:disable, User) %>
    <th><%= t("disabled") %></th>
  <% end %>
  <% if can? :show, User %>
    <th></th>
  <% end %>
  <% if can? :edit, User %>
      <th></th>
  <% end %>
  <% if can? :destroy, User %>
      <th></th>
  <% end %>
</tr>
