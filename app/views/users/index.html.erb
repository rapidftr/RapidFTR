<h2>Manage Users</h2>

<p><%= link_to 'New User', new_user_path %></p>

<table>
	<thead>
  <tr>
    <th>Full Name</th>
    <th>User Name</th>
    <th>User Type</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<% @users.each do |user| %>
  <tr id="user-row-<%=user.full_name%>">
    <td><%=h user.full_name %></td>
    <td><%=h user.user_name %></td>
    <td><%=h user.user_type %></td>
    <td class="user-status"><%= if (user.disabled=="true") then  h "Disabled" else h "Enabled" end %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td>
        <% if current_user_name != user.user_name %>
            <%= link_to 'Delete User', user, :confirm => 'Are you sure you want to delete this user? Deletion can not be undone. Click OK To Delete User.', :method => :delete %></td>
        <% end %>
     </td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Back', admin_path %></p>