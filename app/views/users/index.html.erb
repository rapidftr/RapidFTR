
<!-- to hook in / populate the users model in backbone -->
<script type="text/javascript">
    $(function () {
        window.Users.refresh(<%= raw @users_details.to_json %>);
    });
</script>

<h1><%= t("users.manage") %></h1>

<div class="page-content-new">
  <div class="side-tab">
    <ul>
      <li class="current"><%= link_to I18n.t("users.label"), users_path %></li>
      <li><%= link_to t("roles.label"), roles_path %></li>
    </ul>
  </div>
  <div class="side-tab-content">
    <% if @access_error.present? %>
        <strong><%= @access_error %></strong>
    <% end %>
    <% if @users.present? %>
        <%= render :partial => 'users_table' %>
        <p><%= link_to t("buttons.back"), :back %></p>

        <div id="modal-dialog"/>
    <% end %>

  </div>

</div>
