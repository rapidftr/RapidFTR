<h2>User Details</h2>
<p>
  <b>Name:</b>
  <%=h @user.full_name %>
</p>

<p>
  <b>User Name:</b>
  <%=h @user.user_name %>
</p>

<p>
  <b>Password:</b>
  <%=h @user.password %>
</p>

<p>
  <b>User Type:</b>
  <%=h @user.user_type %>
</p>

<p>
  <b>Phone number:</b>
  <%=h @user.phone %>
</p>
<p>
  <b>Email Address:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Organisation:</b>
  <%=h @user.organisation %>
</p>

<p>
  <b>Position:</b>
  <%=h @user.position %>
</p>

 <p>
  <b>Location:</b>
  <%=h @user.location %>
</p>

 <p>
  <b>Status:</b>
  <%=h @user.disabled=="true"? "Disabled" : "Enabled" %>
</p>

<p>
  <b>Devices:</b><br/>
    <% @user.devices.each do |device| %>
      <% if device.blacklisted? %>
        <span class='device-blacklisted'><%= device.imei %> (blacklisted)</span><br/>
      <% else %>
        <%= device.imei %> <br/>      
      <% end %>
    <% end %>
</p>



 <%= link_to 'Edit', edit_user_path(@user) %> |
 <%= link_to 'Back', users_path %>

 <%= render :partial => "mobile_login_history", :object => @user %>
