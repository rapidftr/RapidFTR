<div class="profile-header">
  <ul class="history-details">
    <% @child.ordered_histories.each do |history| %>
      <% history['changes'].each_pair do |field, change| %>
        <% history_entry = history_entry_for(history, field, change) %>
        <% unless history_entry.empty? %>
          <li>
            <div>
              <%= render :partial => history_entry[:partial], :locals => history_entry[:locals] %>
            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>

    <li><%= @user.localize_date(@child['created_at'], "%Y-%m-%d %H:%M:%S %Z") %> Record created
      by <%= @child['created_by'] %> belonging to <%= @child['created_organisation'] %></li>
  </ul>
</div>

<div class="profile-tools">
  <ul>
    <li class="back"><%= link_to "Back", child_path(@child) %></li>
  </ul>
</div>
