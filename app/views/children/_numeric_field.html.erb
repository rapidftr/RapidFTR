<p>
  <%= label_tag numeric_field.tag_name_attribute, numeric_field.display_name %>
  <% klass = @child.errors.on(numeric_field.name) == nil ? "" : "field-error"%>
  <span class="<%= klass %>">
    <%= text_field_tag numeric_field.tag_name_attribute, @child[numeric_field.name] %> 
  </span>
  <% if numeric_field.help_text.present?%> 
  <br />
  <span class='help-text-container'>
    <span class='help-text'>
      <%=numeric_field.help_text%>
    </span>
  </span>
  <% end%>
</p>
