<dl class="radioList">
  <dt><span><%= radio_button.name.humanize %></span>
    <% if radio_button.help_text.present?%>
    <br/>
    <span class='help-text-container'>
      <span class='help-text'>
	<%=radio_button.help_text%>
      </span>
    </span>
    <% end%>
  </dt>

  <dd>
    <% radio_button.options.each do |option| %>
        <p>
          <%= radio_button_tag radio_button.tag_name_attribute, option.option_name, option.option_name == @child[radio_button.name] %>
          <%= label_tag option.tag_id, option.option_name %>
        </p>
    <% end %>
  </dd>
</dl>
