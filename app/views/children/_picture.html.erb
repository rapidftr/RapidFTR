<div class="profile-image">
  <div class="image">
    <% if @child.primary_photo_id %>
        <%= link_to image_tag(child_resized_photo_path(@child, @child.primary_photo_id, 328)), child_resized_photo_path(@child, @child.primary_photo_id, 640) %>
    <% else %>
        <%= image_tag(no_photo_available_path) %>
    <% end %>

    <p class="view-full-size">Click on the Image to see full size</p>
  </div>
  <%= link_to "Edit photo", edit_photo_url(@child) if @child.photo %>
</div>
