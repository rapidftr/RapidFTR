<% unless child.flag? %>
        <%= render :partial => "children/mark_as",
                   :locals=> {
                               :child => child,
                               :mark_as_label => t("child.flag_record"),
                               :mark_as_message_id => "flag_message",
                               :mark_as_message => t("child.flag_reason")+":",
                               :mark_as_property => "flag",
                               :mark_as_property_value => "true",
                               :mark_as_submit_label => t("child.flag_label"),
                               :error_message => t("child.flag_error_message"),
                               :style => "flag"
                   }
        %>
    <% else %>
        <%= render :partial => "children/mark_as",
                   :locals=> {
                               :child => child,
                               :mark_as_label => t("child.unflag_record"),
                               :mark_as_message_id => "flag_message",
                               :mark_as_message => t("child.unflag_reason")+":",
                               :mark_as_property => "flag",
                               :mark_as_property_value => "false",
                               :mark_as_submit_label => t("child.unflag_label"),
                               :error_message => t("child.unflag_error_message")  ,
                               :style => "flag"
                   }
        %>
<% end %>
