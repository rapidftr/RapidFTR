<div class="orderby_panel">
	<%= t("children.order_by.label") %>:
	<ul>
	  <% filter_name = @filter %>
	  <% filter_name = 'created' if @filter == 'all' or @filter == 'active' or @filter.nil? %>
		<li class="first"><%= link_for_order_by(@filter, "most recently"+" #{filter_name}", t("children.order_by.most_recently")+" "+ t("children.filter_by.#{filter_name}"),  @order) %></li>
		<li><%= link_for_order_by(@filter, "name", t('children.order_by.name'), @order) %></li>
	</ul>
</div>