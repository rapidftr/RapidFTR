<div class="orderby_panel">
	Order by:
	<ul>
	  <% filter_name = @filter %>
	  <% filter_name = 'created' if @filter == 'all' or @filter == 'active' or @filter.nil? %>
		<li class="first"><%= link_for_order_by(@filter, "most recently #{filter_name}", @order) %></li>
		<li><%= link_for_order_by(@filter, 'name', @order) %></li>
	</ul>
</div>